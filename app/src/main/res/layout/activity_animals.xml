<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please write 5 animals that start with the letter 'S':" />

    <EditText
        android:id="@+id/animal1Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Animal 1" />

    <EditText
        android:id="@+id/animal2Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Animal 2" />

    <EditText
        android:id="@+id/animal3Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Animal 3" />

    <EditText
        android:id="@+id/animal4Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Animal 4" />

    <EditText
        android:id="@+id/animal5Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Animal 5" />

    <Button
        android:id="@+id/submitAnimalsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>
