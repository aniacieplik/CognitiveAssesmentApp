<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics.UltimateStatistics">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/spellPointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Spell Points: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="@color/gray_light"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/meanSpellPointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mean Spell Points: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="@color/gray_light"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/rememberPointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Remember Points: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="@color/gray_light"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/meanRememberPointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mean Remember Points: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="@color/gray_light"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/animalPointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Animal Points: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="@color/gray_light"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/meanAnimalPointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mean Animal Points: 0"
                android:textSize="18sp"
                android:padding="8dp"
                android:background="@color/gray_light"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
