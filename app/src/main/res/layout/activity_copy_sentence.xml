<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please copy the sentence below exactly as it appears:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOOD CITIZENS ALWAYS WEAR STOUT SHOES"
        android:textSize="18sp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/copySentenceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the sentence here" />

    <Button
        android:id="@+id/submitSentenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DD6578"
        android:text="Submit" />
</LinearLayout>
