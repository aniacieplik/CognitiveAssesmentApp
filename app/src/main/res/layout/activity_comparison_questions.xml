<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.TYM.ComparisonQuestions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Why is a carrot like a potato?" />

        <EditText
            android:id="@+id/carrotPotatoInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your answer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Why is a lion like a wolf?" />

        <EditText
            android:id="@+id/lionWolfInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your answer" />

        <Button
            android:id="@+id/submitComparisonButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DD6578"
            android:text="Submit" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>