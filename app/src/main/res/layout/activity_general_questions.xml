<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Who is the prime minister of Poland?" />

    <EditText
        android:id="@+id/primeMinisterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the prime minister's name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. In what year did the Second World War start?" />

    <Spinner
        android:id="@+id/ww2YearSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submitQuestionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DD6578"
        android:text="Submit" />
</LinearLayout>
